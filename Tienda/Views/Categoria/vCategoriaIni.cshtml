@model List<clsCategoria>

@{
    ViewData["Title"] = "vCategoriaIni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Categorias</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="card">
    <div class="card-header">
        Listado de categorias
    </div>
    <div class="card-body">

        <a asp-action="vCategoriaDet" asp-controller="Categoria" asp-route-_IdCategoria="0" class="btn btn-success btn-sm">Nueva Categoria</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.strCategoria</td>                        
                        <td>
                            <a asp-action="vCategoriaDet" asp-controller="Categoria" asp-route-_IdCategoria="@item.IdCategoria" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Categoria" asp-route-_IdCategoria="@item.IdCategoria" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>