@model List<clsProveedor>

@{
    ViewData["Title"] = "vProveedorIni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Proveedores</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="card">
    <div class="card-header">
        Listado de Proveedores
    </div>
    <div class="card-body">

        <a asp-action="vProveedorDet" asp-controller="Proveedor" asp-route-_IdProveedor="0" class="btn btn-success btn-sm">Nueva Proveedor</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>NIT</th>                    
                    <th>Nombre</th> 
                    <th>Telefono</th> 
                    <th>Dirección</th>                     
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.strNIT</td>
                        <td>@item.strNombre</td>
                        <td>@item.strTelefono</td>
                        <td>@item.strDireccion</td>                        
                        <td>
                            <a asp-action="vProveedorDet" asp-controller="Proveedor" asp-route-_IdProveedor="@item.IdProveedor" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Proveedor" asp-route-_IdProveedor="@item.IdProveedor" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>