@model List<clsTipoUnidad>

@{
    ViewData["Title"] = "vTipoUnidadIni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Tipos de Unidades</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="card">
    <div class="card-header">
        Listado de Tipos Unidades
    </div>
    <div class="card-body">

        <a asp-action="vTipoUnidadDet" asp-controller="TipoUnidad" asp-route-_IdTipoUnidad="0" class="btn btn-success btn-sm">Nuevo tipo de unidad</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.strTipoUnidad</td>                        
                        <td>
                            <a asp-action="vTipoUnidadDet" asp-controller="TipoUnidad" asp-route-_IdTipoUnidad="@item.IdTipoUnidad" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="TipoUnidad" asp-route-_IdTipoUnidad="@item.IdTipoUnidad" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>