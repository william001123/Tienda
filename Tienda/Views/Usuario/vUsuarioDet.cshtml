@model clsUsuario
@{
    ViewData["Title"] = "vUsuarioDet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-1">
        <a asp-action="vUsuarioIni" asp-controller="Usuario" class="btn btn-warning btn-sm">Volver</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                Usuario
            </div>
            <div class="card-body">
                
                <form asp-action="GuardarCambios" asp-controller="Usuario" method="post">

                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="IdEmpleado" />

                    <div class="mb-2">
                        <label class="form-label">Usuario</label>
                        <input type="text" class="form-control form-control-sm" asp-for="strUserName" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-control form-control-sm" asp-for="strContraseña" />
                    </div>

                    <button type="submit" class="btn btn-success btn-sm">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>
